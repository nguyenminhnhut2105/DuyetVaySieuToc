@using DuyetVaySieuToc.Models.ViewModel;
@model IEnumerable<KhachHangVayViewModel>
@{
    ViewBag.Title = "Khách hàng vay - Finish";
    Layout = "~/Areas/Admin/Views/Shared/Layout/_LayoutAdmin.cshtml";
    int stt = 0;
}


<h2>Khách hàng vay - Finish"</h2>
@using (Html.BeginForm("ExportF", "QuanLyKhachHangVay", FormMethod.Post))
{

    <input type="submit" class="btn btn-success" value="Xuất file Excel" />


}
<br />
<table id="dsDinhDang" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>STT</th>
            <th>
                @Html.DisplayName("Họ tên")
            </th>
            <th>
                @Html.DisplayName("Số điện thoại")
            </th>
            <th>
                @Html.DisplayName("Chứng minh")
            </th>
            <th>
                @Html.DisplayName("Địa chỉ")
            </th>
            <th>
                @Html.DisplayName("Tôi có")
            </th>
            <th>
                @Html.DisplayName("Ngày đăng ký")
            </th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @{ stt++;}
                    @stt
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HOTEN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SDT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CMND)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DIACHI)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VAYTHEO)
                </td>
                <td>
                   @item.NGAYDANGKY.Value.ToString("dd/MM/yyyy HH:mm:ss")
                </td>
                <td>
                    @Html.ActionLink("Xét duyệt", "Duyet", new { @maId = item.ID }) |
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.ID })

                </td>
            </tr>
                        }
    </tbody>

</table>
<br />
<div class="pull-left">
    <a href="@Url.Action("Index")" class="btn btn-warning margin-right">
        <span class="glyphicon glyphicon-remove"></span> Quay về
    </a>
</div>
<script src="~/Scripts/DataTables/jquery-1.12.4.js"></script>


<link href="~/Scripts/DataTables/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/Scripts/DataTables/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
<script src="~/Scripts/DataTables/dataTables.bootstrap.min.js"></script>
<script>
    $('#dsDinhDang').DataTable({
        responsive: true,
        "language": {
            "lengthMenu": "Hiển thị _MENU_ dòng dữ liệu trên một trang",
            "info": "Hiển thị _START_ trong tổng số _TOTAL_ dòng dữ liệu",
            "infoEmpty": "Dữ liệu rỗng",
            "emptyTable": "Chưa có dữ liệu nào",
            "processing": "Đang xử lý...",
            "search": "Tìm kiếm:",
            "loadingRecords": "Đang load dữ liệu...",
            "zeroRecords": "không tìm thấy dữ liệu",
            "infoFiltered": "(Được từ tổng số _MAX_ dòng dữ liệu)",
            "paginate": {
                "first": "|<",
                "last": ">|",
                "next": ">>",
                "previous": "<<"
            }
        },
        "lengthMenu": [[20, 30, 50, 100, 200, 350, 400, 450, 500, -1], [20, 30, 50, 100, 200, 350, 400, 450, 500, "Tất cả"]]
    });
</script>


